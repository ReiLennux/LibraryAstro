---
import Layout from "../../../layouts/Layout.astro";
import HelmetD from "../../../assets/HelmetD.png";
import AuthorDetails from '../../../components/AuthorDetails.vue'
const { autorLibroId } = Astro.params;

---

<Layout>
  <div class="w-full h-screen grid grid-cols-2 grid-rows-1 gap-4 p-8">
    
    <div class="flex items-center justify-end rounded-lg">
      <div>
        <div class="flex justify-start items-start ">
          <a
          href="/Authors"
          class="px-3 py-2 text-xs font-medium text-center rounded-lg dark:bg-gray-900 dark:hover:bg-gray-800"
      >
          Back
      </a>
      </div>
        <img
          class="m-4 h-48 w-48 object-cover rounded-lg"
          src={HelmetD.src}
          alt="Libro imagen"
        />
      </div>
      </div>
      
    <div class="flex justify-center flex-col gap-4">
      
        <AuthorDetails client:load autorLibroId={Number(autorLibroId)}></AuthorDetails>
    </div>
  </div>
</Layout>
